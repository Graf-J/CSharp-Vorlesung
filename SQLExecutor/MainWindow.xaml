<Window x:Class="SQLExecutor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLExecutor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Select SQL-Script" Margin="10,10,624,362" Click="SelectSQLScriptButton_Click"/>
        <TextBox TextWrapping="Wrap" Margin="10,87,10,145" Name="ScriptTextBox"/>
        <TextBox TextWrapping="Wrap" Margin="150,299,10,81" Name="ConnectionStringTextBox"/>
        <TextBlock TextWrapping="Wrap" Margin="10,299,655,81"><Run Language="de-de" Text="ConnectionString:"/></TextBlock>
        <Button Content="Execute SQL Script" Margin="10,358,594,10" Click="ExecuteSQLScriptButton_Click" />
        <TextBlock TextWrapping="Wrap" Margin="254,358,10,10" x:Name="InfoTextBlock" Text=""/>

    </Grid>
</Window>
